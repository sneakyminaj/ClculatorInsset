<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
         xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:menu="urn:import:org.insset.client.menu">

  <g:HTMLPanel>
    <menu:Menu ui:field="menu"/>
    <h1>Calcul de solde</h1>       
    <div class="bs-section">

        <g:FlowPanel>
          <g:FormPanel/>
            <g:FlowPanel>
                <g:Label>Solde</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="initial" text="Montant Initial"/>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="percent" text="Poucentage"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label ui:field="errorLabel" ></g:Label>
            </g:FlowPanel>
            <g:FlowPanel ui:field="formActions" >
                <g:SubmitButton ui:field="boutonEnregistrer" text="Envoyer"/>
                <g:ResetButton ui:field="boutonClear" text="Clear"/>
            </g:FlowPanel>
        </g:FlowPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>